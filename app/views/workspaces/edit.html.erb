

<%= render partial: 'layouts/header', locals: {title: "Editing Workspace"} %>
<div class="form-element-align">
  <%= simple_form_for @workspace, wrapper: :input_group do |f| %>
    <%= f.input :subdomain, label: "Subdomain name", disabled: true %>
    <%= f.input :name, label: "Description" %>
    <%= f.input :is_multiuser, wrapper: :custom_boolean_switch %>
    <%= f.input :user_can_self_exclude, wrapper: :custom_boolean_switch, label: "Users can exclude themselves?" %>
    <%= f.input :user_can_invite, wrapper: :custom_boolean_switch, label: "Users can invite others?" %>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-4">
          <%= image_tag @workspace.logo.url, class: "rounded imagesize-big" if @workspace.logo? %>
        </div>
        <div class="col-sm-8">
          <%= f.input :logo, as: :image_preview, label: "Workspace logo", input_html: {preview_version: :thumb} %>
        </div>
      </div>
    </div>
    <br>&nbsp;
    <%= render 'layouts/default_buttons', return_path: workspaces_path, f: f, add_new: false %>
  <% end %>
</div>
