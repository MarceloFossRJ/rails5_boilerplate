<%= render partial: 'layouts/header', locals: {title: "My Workspaces"} %>
<%= render partial: 'layouts/tabs', locals: {controller_class: controller_name , action: "index", search_field:"name_cont"} %>
<%= render partial: 'layouts/adv_search', locals: {partial_file_name: "workspaces/adv_search"} %>

<div class="table-responsive">
    <table class="table table-striped table-hover table-sm table-bordered">
        <thead>
        <tr>
            <th><%= sort_link @q, :subdomain, "Subdomain name" %></th>
            <th><%= sort_link @q, :name, "Description" %></th>
            <th><%= sort_link @q, :is_multiuser, "Multiuser?" %></th>
        </tr>
        </thead>
        <tbody>
        <% @workspaces.each do |w| %>
        <tr>
            <td><%= w.name %></td>
            <td><%= w.subdomain %></td>
            <td><%= w.is_multiuser %></td>
        </tr>
        <% end %>
        </tbody>
    </table>
    <br>
    <%= paginate @workspaces %>
</div>
